  <!-- <link rel="apple-touch-icon" href="/apple-touch-icon.png"> -->

  <!-- Safari 9+ -->
  <!-- <link rel="mask-icon" href="/mask-icon.svg" color="#1c7cf6"> -->

  <!-- Chrome Android -->
  <!-- <link rel="icon" sizes="196x196" href="/shortcut-icon.png"> -->
  <!-- TODO: OG & Twitter -->

  <meta name="generator" content={Astro.generator} />

  <script is:inline src="/js/htmx.js"></script>
  <title>{(entryTitle && entryTitle !== title ? `${entryTitle} | ` : '') + title}</title>
</head>
