---
// import MobileMenuToggle from '@astrojs/starlight/components/MobileMenuToggle.astro'
import MobileMenuToggle from './MobileMenuToggle.astro'
import type { Props } from '@astrojs/starlight/props'

const { hasSidebar } = Astro.props
---

<div
  class="
    flex flex-col
    justify-stretch
    min-h-dvh
  "
>
  <header
    class="
      sticky top-0
      mb-12
      z-40
      flex items-center justify-between
      py-2 px-4
      border-b-1
      border-b-(--sl-color-gray-3)
      bg-(--sl-color-gray-6)
    "
  >
    <slot name="header" />
  </header>

  <div
    class="
      flex place-items-stretch
      grow
      h-full
      [&_main]:grow
      [&_main]:h-full
      [&_main]:overflow-y-hidden
      [&_main]:p-4
      [&_main]:bg-(--sl-color-black)
      md:[&_main]:p-8
    "
  >
    {
      hasSidebar &&
        (
        <aside
          class="
            fixed
            md:relative
            overflow-y-scroll
            md:overflow-y-visible
            w-screen
            md:w-auto
            md:h-auto
            bg-(--sl-color-gray-6)
          "
        >
          <details
            id="left-sidebar"
            name="sidebar"
            class="
              open:[&_summary]:opacity-100
              [&_>_summary]:opacity-40
              [&_>_summary]:hover:opacity-100
            "
          >
            <nav
              class="
                py-8 px-4
                w-full h-md
                z-8000
                md:w-3xs
                [&_summary]:bg-(--sl-color-gray-5)
              "
            >
              <slot name="sidebar" />
            </nav>
            <summary
              class="
                fixed bottom-2
                left-2
                w-fit
                list-none
                bg-amber-300
              "
            >
              <MobileMenuToggle {...Astro.props} />
            </summary>
          </details>
        </aside>
      )
    }

    {
      hasSidebar &&
        (
        <script is:inline>
          function displayLeftSideBar() {
      const docWidth = document.documentElement.clientWidth
      const md = 768

      if (docWidth > md) {
        document.getElementById('left-sidebar').open = true
      } else {
        document.getElementById('left-sidebar').open = false
      }
    }

    window.addEventListener('resize', () => {
      displayLeftSideBar()
    })

    displayLeftSideBar()
        </script>
      )
    }

    <slot />
  </div>
</div>
